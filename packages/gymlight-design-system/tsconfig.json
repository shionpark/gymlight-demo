{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2015",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsxImportSource": "@emotion/react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["./node_modules"]
}
